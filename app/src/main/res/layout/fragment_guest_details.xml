<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/visitor_parking" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/person_icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_supervisor_account_black_24dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="0.5"
                android:ems="12"
                android:hint="Guest Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:padding="8dp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_directions_car_black_24dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="0.5"
            android:ems="12"
            android:hint="Car Number"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:padding="8dp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/apt_icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_location_city_black_24dp" />
        <Spinner
            android:id="@+id/floor_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/apt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="0.5"
            android:ems="4"
            android:hint="House Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="8dp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_contact_phone_black_24dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/guest_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="0.5"
            android:ems="12"
            android:hint="Guest Phone Number"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:padding="8dp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


</LinearLayout>


